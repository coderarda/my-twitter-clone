generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model mainposts {
  postId       Int            @id @unique(map: "postId_UNIQUE") @default(autoincrement())
  postContent  String         @db.VarChar(45)
  postDate     DateTime       @default(now()) @db.DateTime(0)
  User_userId  Int
  user         user           @relation(fields: [User_userId], references: [userId], onDelete: NoAction, onUpdate: NoAction, map: "fk_MainPosts_User")
  repliedposts repliedposts[]

  @@index([User_userId], map: "fk_MainPosts_User_idx")
}

model repliedposts {
  postId           Int       @id @unique(map: "postId_UNIQUE") @default(autoincrement())
  PostContent      String    @db.VarChar(45)
  RepliedPostDate  DateTime  @default(now()) @db.DateTime(0)
  MainPosts_postId Int
  mainposts        mainposts @relation(fields: [MainPosts_postId], references: [postId], onDelete: NoAction, onUpdate: NoAction, map: "fk_RepliedPosts_MainPosts1")

  @@index([MainPosts_postId], map: "fk_RepliedPosts_MainPosts1_idx")
}

model user {
  userId    Int         @id @unique(map: "idtable1_UNIQUE") @default(autoincrement())
  name      String      @db.VarChar(45)
  lastname  String      @db.VarChar(45)
  username  String      @db.VarChar(45)
  mainposts mainposts[]
}
